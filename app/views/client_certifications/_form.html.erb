<%= nested_form_for client_certification, validate: true, :html => { class: 'form-horizontal' } do |f| %>

    <div class="box-body box-success">
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-2">
            <%= f.label :contract, 'Obra:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="col-md-8">
            <%= f.collection_select(:contract_id, Contract.all.order('name'), :id, :name, {prompt: 'Ninguno'}, :class => 'form-control') %>
          </div>
        </div>
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :state, 'Estado:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-md-8">
            <%= f.select(:state, ["Pendiente", "Terminado", "Rechazado"], {prompt: 'Seleccionar'}, :class => 'form-control') %>
          </div>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :date, 'Fecha:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="input-group col-md-7">
            <%= f.text_field :date, :id => 'datepickerFrom', :class => 'input-group date form-control datepicker', value:Time.now.strftime("%d/%m/%Y") %><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :received, 'Recibido por:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :received, value: current_user.full_name.titleize, :class => 'form-control', :readonly => true %>
          </div>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :observation, 'ObservaciÃ³n:', :class => 'control-label' %>
          </div>
          <div class="col-md-9">
            <%= f.text_area :observation, :class => 'form-control', cols: '20', rows: '5', :maxlength => 200 %>
          </div>
        </div>
      </div>


      <div class="col-md-12">
        <div class="box box-success">
          <div class="box-header with-border">
            <h3 class="box-title">Rubros</h3>
          </div>
          <div class="box-body">
            <table class="table table-bordered">
              <theah>
                <tr>
                  <th class="col-md-5">Rubro</th>
                  <th class="col-md-2">Cantidad</th>
                  <th class="col-md-2">Precio</th>
                  <th class="col-md-2">Total</th>
                  <th class="col-md-1"></th>
                </tr>
              </theah>
              <tbody>
              <%= f.fields_for :client_certification_details, :wrapper => false do |form| %>
                  <tr class="fields" onchange='getRubroTotal(this);'>
                    <td class="col-md-5"><%=form.collection_select(:rubro_id, Rubro.all, :id, :name, {prompt: 'Seleccionar'}, :onchange => 'getRubroPrice(this);', class: 'form-control')%></td>
                    <td class="col-md-2"><%=form.number_field :quantity, class: 'form-control quantity'%></td>
                    <td class="col-md-2"><%=form.number_field :price, class: 'form-control price', :readonly => true%></td>
                    <td class="col-md-2"><%=form.number_field :total, class: 'form-control total', :readonly => true%></td>
                    <td class="col-md-1"><%=form.link_to_remove '<i class="fa  fa-trash-o"></i>'.html_safe, class: 'btn btn-danger'%></td>
                  </tr>
              <% end %>
              <tr>
                <td><%=f.link_to_add '<i class="fa fa-plus"></i>'.html_safe, :client_certification_details, class: 'btn btn-success insert_in_table'%></td>
              </tr>
            </tbody>
           </table>
          </div>
        </div>
      </div>

    </div>


    <div class="box-footer">
      <div class="pull-right">
        <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
        <%= link_to 'Cancelar', client_certifications_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>

<%= form_for account_employee, validate: true, :html => { class: 'form-horizontal' } do |f| %>
    <div class="box-body box-success">
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-2">
            <%= f.label :certification, 'Certificación:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="col-md-4">
            <%= f.collection_select(:certification_id, Certification.all, :id, :contract_name, {prompt: 'Selecciona una certificación'}, :class => 'form-control') %>
          </div>
        </div>
        <div class="field col-md-6 form-group">
          <div class="col-md-2">
            <%= f.label :date, 'Fecha:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="input-group col-md-4">
            <%= f.text_field :date, :id => 'datepickerFrom', :class => 'input-group date form-control datepicker', :value => Date.today %>
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-2">
            <%= f.label :employee, 'Empleado:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="col-md-4">
            <%= f.collection_select(:employee_id, Employee.all.order('name'), :id, :name, {prompt: 'Selecciona un jornalero'}, :class => 'form-control') %>
          </div>
        </div>
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :number_bill, 'N. factura/recibo:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :number_bill, :class => 'form-control'%>
          </div>
        </div>
      </div>
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-2">
            <%= f.label :pay, 'Monto:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :pay, :class => 'form-control'%>
          </div>
        </div>
      </div>
     </div>


    <div class="box-footer">
      <div class="pull-right">
        <%= f.submit 'Guardar', :class => "btn btn-primary" %>
        <%= link_to 'Cancelar', account_employees_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>
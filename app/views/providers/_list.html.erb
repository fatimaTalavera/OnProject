<table class="table table-bordered table-condensed">
  <thead>
  <tr>
    <th>Nombre o Razon Social</th>
    <th>RUC</th>
    <th>Telefono</th>
    <th>Correo</th>
    <th>Direccion</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% providers.each do |provider| %>
      <tr>
        <td><%= provider.name %></td>
        <td><%= provider.ruc %></td>
        <td><%= provider.phone %></td>
        <td><%= provider.email %></td>
        <td><%= disminuir(provider.address) %></td>
        <td>
          <% if (can? :update, Provider) %>
              <%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_provider_path(provider), {:class => "btn btn-xs bg-orange btn-flat"} %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


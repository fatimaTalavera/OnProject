<table class="table table-bordered table-condensed table-list">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Unidad</th>
    <th>Utilidad</th>
    <th>Precio</th>
    <th class="table-actions"></th>
  </tr>
  </thead>

  <tbody>
  <% rubros.each do |rubro| %>
      <tr>
        <td><%= rubro.name %></td>
        <td><%= rubro.measurement_unit %></td>
        <td><%= number_to_percentage(rubro.utility, precision: 2) %></td>
        <td><%= number_to_currency_py(rubro.final_price.to_i) %></td>
        <td>
          <%= link_to "<i class=\"fa fa-eye\"></i>".html_safe, rubro_path(rubro), {:class => "btn btn-xs bg-teal", :title => "Ver"} %>
          <% if (can? :update, Rubro) %>
          <%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_rubro_path(rubro), {:class => "btn btn-xs bg-orange", :title => "Editar"} %>
              <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

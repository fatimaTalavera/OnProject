<div class="box">
  <div class="box-header with-header">
    <h1 class="page-header">Certificaci√≥n Interna</h1>
    <div class="box-body">

      <div class="field col-md-12 form-group">
        <div class="field col-md-8 form-group">
          <div class="col-md-4">
            <strong>Contrato:</strong>
          </div>
          <div class="col-md-8">
            <%= @internal_certification.contract.name %>
          </div>
        </div>

        <div class="field col-md-4 form-group">
          <div class="col-md-4">
            <strong>Jornalero: </strong>
          </div>
          <div class="col-md-7">
            <%= @internal_certification.employee.name %>
          </div>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-4 form-group">
          <div class="col-md-4">
            <strong>Monto:</strong>
          </div>
          <div class="col-md-7">
            <%= @internal_certification.amount %>
          </div>
        </div>

        <div class="field col-md-4 form-group">
          <div class="col-md-4">
            <strong>Descuento:</strong>
          </div>
          <div class="col-md-7">
            <%= @internal_certification.discount %>
          </div>
        </div>

        <div class="field col-md-4 form-group">
          <div class="col-md-4">
            <strong>Fecha:</strong>
          </div>
          <div class="col-md-7">
            <%= @internal_certification.date %>
          </div>
        </div>
      </div>
    </div>
    <div class="box-footer">
      <div class="pull-right">
        <%= link_to 'Editar', edit_client_path(@internal_certification), :class => 'btn btn-primary active' %>
        <%= link_to 'Atras', internal_certifications_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
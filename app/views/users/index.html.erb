<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('helpers.title.user.list') %></h3>
    <div class="box-tools pull-right">
      <%= link_to t('button.new'), new_user_path, {:class => "btn bg-navy"} %>
    </div>
  </div>
  <div class="box-body">
    <div class="user-search buscador-listado">
      <%= search_form_for @q, :html => { class: 'remote-search' } do |f| %>
        <div class="input-group">
          <%= f.text_field :email_cont, :autofocus => true, class: 'form-control', autocomplete: 'off' %>
          <div class="input-group-btn">
            <button type="submit" name="button" class="btn btn-default">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
    <div class="overlay-wrapper buscador-resultados table-responsive" id="user-table">
      <%= render 'list', locals: {users: @users} %>
    </div>
  </div>
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
      <%= paginate @users %>
    </ul>
  </div>
</div>

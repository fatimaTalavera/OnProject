<div class="box box-success">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('helpers.title.user.show') %></h3>
  </div>
  <div class="box-body">
    <div class="col-md-4">
      <label class="control-label">Nombre</label>
      <p> <%= @user.full_name.titleize %> </p>
      <label class="control-label">Email</label>
      <p><%= @user.email %></p>
    </div>
    <div class="col-md-4">
      <label class="control-label">Fecha de Registro</label>
      <p><%= l @user.created_at, format: :long %></p>
      <label class="control-label">Fecha de Ãšltimo Ingreso</label>
      <p><%= @user.last_sign_in_at ? (l @user.last_sign_in_at, format: :long) : "No regista ingreso" %></p>
    </div>
  </div>
  <div class="box-footer">
    <div class="pull-right">
      <%= link_to t('button.edit'), edit_user_path(@user), {:class => "btn btn-flat bg-blue"} %>
      <%= link_to t('button.back'), url_for(:back), {:class => "btn btn-flat btn-default"} %>
    </div>
  </div>
</div>

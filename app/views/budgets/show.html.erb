<div class="box box-success">
  <div class="box-header with-header">
    <h3 class="box-title">Presupuesto</h3>
  </div>
  <div class="box-body">
    <div class="field col-md-12 form-group">
      <div class="field col-md-4 form-group">
        <div class="col-sm-3 label-pad">
          <strong>Nombre:</strong>
        </div>
        <div class="col-sm-7 show-padding">
          <%= @budget.name %>
        </div>
      </div>

      <div class="field col-md-4 form-group">
        <div class="col-sm-3 label-pad">
          <strong>Cliente:</strong>
        </div>
        <div class="col-sm-7 show-padding">
          <%= @budget.client_name %>
        </div>
      </div>

      <div class="field col-md-4 form-group">
        <div class="col-sm-3 label-pad">
          <strong>Fecha:</strong>
        </div>
        <div class="col-sm-5 show-padding">
          <%= @budget.date %>
        </div>
      </div>

    </div>
    <div class="field col-md-12">

      <div class="field col-md-6">
        <div class="col-sm-3 label-pad ">
          <strong>Descripci√≥n:</strong>
        </div>
        <div class="col-sm-7 show-padding">
          <%= @budget.description %>
        </div>
      </div>

    </div>
    <div class="col-md-12">
      <br>
            <table class="table table-bordered table-condensed table-list">
              <tr>
                <th>Rubro</th>
                <th>Ud. Medidad</th>
                <th>Costo</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>% Utilidad</th>
                <th>Sub Total</th>
              </tr>
              <% @budget.budget_details.each do |budget_detail| %>
                  <tr class="fields ">
                    <td><%= budget_detail.rubro_name %></td>
                    <td><%= budget_detail.rubro_measurement_unit %></td>
                    <td><%= number_to_currency_py(budget_detail.cost) %></td>
                    <td><%= number_to_currency_py(budget_detail.price) %></td>
                    <td><%= eval(sprintf("%3.2f",budget_detail.quantity)) %></td>
                    <td><%= budget_detail.utility %></td>
                    <td><%= number_to_currency_py(budget_detail.subtotal) %></td>
                  </tr>
              <% end %>
              <td>
                  <strong>Monto Total:</strong>
                  <%= number_to_currency_py(@budget.total_amount) %>
              </td>
            </table>
          </div>
        </div>
      </div>

  <div class="box-footer">
    <div class="pull-left">
      <div>
        <%= link_to 'Generar PDF', budget_path(@budget, format: 'pdf'), class:'btn btn-flat bg-red pull-right' %>
      </div>
    </div>
    <div class="pull-right">
      <% if (can? :update, Budget) && @budget.pending? %>
          <%= link_to "<i class=\"fa fa-check\"></i>".html_safe, deliver_budget_path(@budget), :class => 'btn bg-green' %>
          <%= link_to "<i class=\"fa fa-times\"></i>".html_safe, cancel_budget_path(@budget), :class => 'btn bg-red' %>
          <%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_budget_path(@budget), :class => 'btn bg-orange'%>

      <% end %>
      <% if (can? :update, Budget) &&  (can? :create, Contract) && @budget.studying? %>
          <%= link_to 'Generar Contrato', new_contract_path({budget_id: @budget.id}), class:'btn bg-blue' %>
      <% end %>
      <% if @budget.approved? && !@budget.contract.nil? && (can? :show, Contract) %>
          <%= link_to 'Ver Contrato'.html_safe, contract_path(@budget.contract.id), :class => 'btn bg-teal'%>
      <% end %>
    </div>
  </div>
</div>

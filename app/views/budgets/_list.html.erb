<table class="table table-bordered table-condensed table-list">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Cliente</th>
    <th>Fecha</th>
    <th>Descripci√≥n</th>
    <th>Estado</th>
    <th>Monto total</th>
    <th class="table-actions-xs"></th>
  </tr>
  </thead>

  <tbody>
  <% budgets.each do |budget| %>
      <tr>
        <td><%= budget.name %></td>
        <td><%= budget.client_name %></td>
        <td><%= budget.date %></td>
        <td><%= budget.description %></td>
        <td>
          <% if budget.approved? %>
              <span class="label label-success">Aprovado</span>
          <% elsif budget.studying? %>
              <span class="label label-primary">Pendiente</span>
          <% elsif budget.pending? %>
              <span class="label label-info">En estudio</span>
          <% elsif budget.cancelled? %>
              <span class="label label-default">Anulado</span>
          <% elsif budget.rejected? %>
              <span class="label label-warning">Rechazado</span>
          <% end %>
        </td>
        <td><%= number_to_currency_py(budget.total_amount) %></td>
        <td>
          <%= link_to "<i class=\"fa fa-eye\"></i>".html_safe, budget_path(budget), {:class => "btn btn-xs bg-teal"} %>
          <% if budget.pending? && (can? :update, Budget) %>
              <%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_budget_path(budget), {:class => "btn btn-xs bg-orange "} %>
          <%end %>

          <% if budget.approved? && !budget.contract.nil? && (can? :show, Contract) %>
              <%= link_to "<i class=\"fa fa-trophy\"></i>".html_safe, contract_path(budget.contract.id), class: 'btn btn-xs bg-purple', title: 'Ver Contrato' %>
          <% end %>

          <%= link_to "<i class=\"fa fa-file-pdf-o\"></i>".html_safe, budget_path(budget, format: 'pdf'), class:'btn btn-xs bg-gray-light', title:'Generar pdf' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

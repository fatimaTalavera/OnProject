<%= form_for service, validate: true, :html => { class: 'form-horizontal' } do |f| %>
    <div class="box-body box-success">
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :name, 'Nombre:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :name, :class => 'form-control', autofocus:true, :maxlength => 40 %>
          </div>
        </div>

        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :price, 'Precio:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :price, :class => 'form-control maskMoneda', :maxlength => 15 %>
          </div>
        </div>

      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :measurement_unit, 'Ud. de medida:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :measurement_unit, :class => 'form-control', :maxlength => 10 %>
          </div>
        </div>

        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :description, 'Descripción:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-md-9">
            <%= f.text_area :description, :class => 'form-control', cols: "30", rows: "5", :maxlength => 200  %>
          </div>
        </div>
      </div>

    </div>

    <div class="box-footer">
      <div class="pull-right">
        <button type="submit" class="btn btn-primary" title="Guardar"><i class="fa fa-save"></i></button>
        <%= link_to "<i class=\"fa fa-arrow-left\"></i>".html_safe, services_path, :class => 'btn btn-default', :title =>'Atrás' %>
      </div>
    </div>
<% end %>

<%= form_for concept, validate: true, :html => { class: 'form-horizontal' } do |f| %>
  <div class="box-body box-success">
    <div class="field col-md-12 form-group">
      <div class="field col-md-6 form-group">
        <div class="col-md-2">
          <%= f.label :name, 'Concepto:' , :class => 'control-label  tooltip_required'%>
        </div>
        <div class="col-md-10">
          <%= f.text_field :name, :class => 'form-control', autofocus:true, :maxlength => 50%>
        </div>
      </div>
    </div>
  </div>

  <div class="box-footer">
    <div class="pull-right">
      <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      <%= link_to 'Cancelar', concepts_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
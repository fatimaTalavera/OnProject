<%= nested_form_for material_movement, validate: true, :html => { class: 'form-horizontal' } do |f| %>
    <div class="box-body">
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :contract, 'Contrato:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-md-7">
            <%= f.collection_select(:contract_id, Contract.all, :id, :name, {prompt: 'Seleccionar'}, :class => 'form-control') %>
          </div>
        </div>
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :fecha, 'Fecha:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="input-group col-md-7">
            <%= f.text_field :fecha, :id => 'datepickerFrom', :class => 'input-group date form-control datepicker' %><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-3">
            <%= f.label :motivo, 'Motivo:', :class => 'control-label' %>
          </div>
          <div class="col-md-9">
            <%= f.text_field :motivo, :maxlength => 120, :class => 'form-control' %>
          </div>
        </div>
      </div>



      <div class="col-md-6">
        <div class="box box-success">
          <div class="box-header with-border">
            <h3 class="box-title">Movimientos</h3>
            </div>
            <div class="box-body">
              <table class="table table-bordered">
                <thead>
                <tr>
                  <th class="col-md-6">Material</th>
                  <th class="col-md-4">Cantidad</th>
                  <th class="col-md-2"></th>
                </tr>
                </thead>
                <tbody>
                <%= f.fields_for :movement_details, :wrapper => false do |form| %>
                    <tr class="fields">
                      <td class="col-md-7"><%=form.collection_select(:material_id, Material.all, :id, :name, {prompt: 'Seleccionar'}, class: 'form-control tooltip_required')%></td>
                      <td class="col-md-4"><%=form.number_field :cantidad, class: 'form-control tooltip_required'%></td>
                      <td class="col-md-1"><%=form.link_to_remove '<i class="fa  fa-trash-o"></i>'.html_safe, class: 'btn btn-danger'%></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <%=f.link_to_add '<i class="fa fa-plus"></i>'.html_safe, :movement_details, class: 'btn btn-success'%>
        </div>
      </div>
    </div>



    <div class="box-footer">
      <div class="pull-right">
        <%= f.submit 'Guardar', :class => "btn btn-primary active" %>
        <%= link_to 'Cancelar',  material_movements_path , class: 'btn btn-default' %>
      </div>
    </div>
<% end %>

<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Olvido su Contraseña?</h3>
    <p>Enviaremos instrucciones para reestablecer su contraseña.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email, 'Correo:' %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
     <%= f.submit 'Restablecer Contraseña', :class => 'button right' %>
  <% end %>
</div>

<div class="box">
  <div class="box-header with-header">
    <h1 class="page-header">Facturas de Compra</h1>
    <div class="box-body">
      <div class="panel-body">
        <div class="col-md-12 form-group">
          <div class="col-md-4">
            <strong>Condicion:</strong>
            <%= @purchase_bill.condition %>
          </div>

          <div class="col-md-4">
            <strong>Numero:</strong>
            <%= @purchase_bill.number %>
          </div>

          <div class="col-md-4">
            <strong>Fecha:</strong>
            <%= @purchase_bill.date %>
          </div>
        </div>
      </div>

      <div class="col-md-12 form-group">
        <div class="col-md-8">
          <div class="form-group">
            <div class="panel panel-default">
              <table class="table table-striped table-bordered", cellspacing="0" width="100%">
                <thead>
                <tr>
                  <th>Material</th>
                  <th>Cantidad</th>
                </tr>
                </thead>
                <tbody>
                <% @purchase_bill.purchase_details.each do |detalle| %>
                    <td><%= detalle.material.name %></td>
                    <td><%= detalle.quantity %></td>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="box-footer">
      <div class="pull-right">
        <%= link_to 'Editar', edit_purchase_bill_path(@purchase_bill), :class => 'btn btn-primary active' %>
        <%= link_to 'Atras', purchase_bills_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>
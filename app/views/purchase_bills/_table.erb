<div class="panel panel-default">
  <h1 class="panel-heading"> Facturas de compra
    <%= link_to new_purchase_bill_path, class: 'btn btn-success active', title: 'Nuevo', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
        <span class= "fa fa-plus"></span>
    <% end %></h1>
  <div class="panel-body">
    <div class="table-responsive">
      <table id="movements_table" class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Fecha</th>
          <th>Condicion</th>
          <th>Numero</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @purchase_bills.each do |purchase_bill| %>
            <tr>
              <td><%= purchase_bill.date %></td>
              <td><%= purchase_bill.condition %></td>
              <td><%= purchase_bill.number %></td>

              <td><%= link_to purchase_bill, class: 'btn btn-info active', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-eye"></span>
                <% end %>
                <%= link_to edit_purchase_bill_path(purchase_bill), class: 'btn btn-success active', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                    <span class= "fa fa-edit"></span>
                <% end %>
                <%= link_to purchase_bill, method: :delete, data: {confirm: 'Esta seguro que desea eliminar este registro?' }, class: 'btn btn-danger active', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-trash"></span>
                <% end %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
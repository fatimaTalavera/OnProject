<div class="box box-success">
  <div class="box-header with-border box-success">
    <h3 class="box-title"><%= t('helpers.title.client.list') %></h3>
    <%= link_to "<i class=\"fa fa-plus\"></i>".html_safe, new_client_path, {:class => "btn btn-sm btn-flat bg-green btn-title", :title => "Agregar Cliente"} %>
  </div>
  <div class="box-body">
    <div class="client-search searchList">
      <%= search_form_for(@q, remote: true, :html => { class: 'remote-search' }) do |f| %>
          <div class="input-group">
            <%= f.text_field :name_or_ruc_cont, class: 'form-control', autocomplete: 'off', placeholder: 'Busca por nombre o ruc' %>
            <div class="input-group-btn">
              <button type="submit" name="button" class="btn btn-default">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
      <% end %>
    </div>
    <div class="overlay-wrapper searchResult table-responsive" id="clients-table">
      <%= render 'list', :clients => @clients %>
    </div>
  </div>
  <div class="box-footer clearfix">
    <div id="paginate-container">
      <ul class="pagination pagination-sm no-margin pull-right">
        <%= paginate @clients %>
      </ul>
    </div>
  </div>
</div>
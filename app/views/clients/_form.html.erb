<%= form_for @client, validate: true, :html => { class: 'form-horizontal' } do |f| %>
      <div class="box-body">
        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group required">
            <div class="col-md-3">
              <%= f.label :name, 'RazÃ³n Social:', :class => 'control-label' %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name, :class => 'form-control', autofocus:true, :maxlength => 30 %>
            </div>
          </div>

          <div class="field col-md-6 form-group">
            <div class="col-md-2">
              <%= f.label :last_name, 'Apelido:', :class => 'control-label' %>
            </div>
            <div class="col-md-10">
              <%= f.text_field :last_name, :class => 'form-control', :maxlength => 30 %>
            </div>
          </div>
        </div>

        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group required">
            <div class="col-md-3">
              <%= f.label :identification_document, 'Documento:', :class => 'control-label' %>
            </div>
            <div class="col-md-5">
              <%= f.number_field :identification_document, :class => 'form-control', :maxlength => 10 %>
            </div>
          </div>

          <div class="field col-md-6 form-group">
            <div class="col-md-2">
              <%= f.label :email, 'Correo:', :class => 'control-label' %>
            </div>
            <div class="col-md-10">
              <%= f.text_field :email, :class => 'form-control', :maxlength => 30 %>
            </div>
          </div>
        </div>

        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group">
            <div class="col-md-3">
              <%= f.label :adress, 'Direccion:', :class => 'control-label' %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :adress, :class => 'form-control', :maxlength => 50 %>
            </div>
          </div>

          <div class="field col-md-6 form-group">
            <div class="col-md-2">
              <%= f.label :phone, 'Telefono:', :class => 'control-label' %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :phone, :class => 'form-control', :maxlength => 12, placeholder: '0000-000-000' %>
            </div>
          </div>
        </div>
      </div>

    <div class="box-footer">
        <div class="pull-right">
          <% if controller.action_name == 'edit'  %>
              <%= f.submit 'Guardar', :class => "btn btn-primary active" %>
          <% else %>
              <%= f.submit 'Guardar', :class => 'btn btn-primary active'%>
          <% end %>
          <%= link_to 'Cancelar',  clients_path , class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
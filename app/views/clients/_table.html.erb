<div class="panel panel-default">
  <h1 class="panel-heading">Lista de Clientes
    <%= link_to new_client_path, class: 'btn btn-success active', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
        <span class= "fa fa-plus"></span>
    <% end %></h1>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Documento</th>
          <th>Correo</th>
          <th>Direccion</th>
          <th>Telefono</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @clients.each do |client| %>
            <tr>
              <td><%= client.name %></td>
              <td><%= client.last_name %></td>
              <td><%= client.identification_document %></td>
              <td><%= client.email %></td>
              <td><%= client.adress %></td>
              <td><%= client.phone %></td>
              <td><%= link_to client, class: 'btn btn-info active', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-eye"></span>
                <% end %>
              <%= link_to edit_client_path(client), class: 'btn btn-success active', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "fa fa-edit"></span>
              <% end %>
              <%= link_to client, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este registro?' }, class: 'btn btn-danger active', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-trash"></span>
                <% end %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <h1 class="panel-heading">Lista de Clientes</h1>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Documento</th>
          <th>Correo</th>
          <th>Direccion</th>
          <th>Telefono</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @clients.each do |client| %>
            <tr>
              <td><%= client.name %></td>
              <td><%= client.last_name %></td>
              <td><%= client.identification_document %></td>
              <td><%= client.email %></td>
              <td><%= client.adress %></td>
              <td><%= client.phone %></td>
              <td><%= link_to 'Ver', client %></td>
              <td><%= link_to 'Editar', edit_client_path(client) %></td>
              <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

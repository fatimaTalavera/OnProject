<%= form_for(material) do |f| %>
    <% if material.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>

          <ul>
            <% material.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <form class="form-horizontal">

        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group">
            <div class="col-sm-2">
              <%= f.label :name, 'Nombre:' %>
            </div>
            <div class="col-sm-8 ">
              <%= f.text_field :name, autofocus: true, :class => 'form-control' %>
            </div>
          </div>

          <div class="field col-md-6 form-group">
            <div class="col-sm-2">
              <%= f.label :description, 'Descripcion:' %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :description, :class => 'form-control' %>
            </div>
          </div>
        </div>

        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group">
            <div class="col-sm-2">
              <%= f.label :measurement_unit, 'Unidad de medida' %>
            </div>
            <div class="col-sm-4 ">
              <%= f.text_field :measurement_unit, :class => 'form-control' %>
            </div>
          </div>
          <div class="field col-md-6 form-group">
            <div class="col-sm-2">

              <%= f.label :quantity, 'Cantidad:' %>
            </div>
            <div class="col-sm-6 ">
              <%= f.text_field :quantity, :class => 'form-control' %>
            </div>
          </div>
        </div>

        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group">
            <div class="col-sm-2">
              <%= f.label :price, 'Precio:' %>
            </div>
            <div class="col-sm-5 ">

              <%= f.text_field :price, :class => 'form-control' %>
            </div>
          </div>


          <div class="field col-md-6 form-group">
            <div class="col-sm-2">
              <%= f.label :minimun_stock, 'Stock minimo:' %>
            </div>
            <div class="col-sm-5 ">
              <%= f.number_field :minimun_stock, :class => 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">

          <div class="actions">
            <%= f.submit "Guardar", :class => 'btn btn-primary margen' %>
            <%= link_to 'Cancelar', materials_path, :class => 'btn btn-default' %>
          </div>
        </div>
      </form>
    </div>
<% end %>

<%= form_for material, validate: true, :html => {class: 'form-horizontal'} do |f| %>
    <div class="box-body">
      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-sm-2 alineado">
            <%= f.label :name, 'Nombre:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-sm-7 ">
            <%= f.text_field :name, autofocus: true, :maxlength => 30, :class => 'form-control' %>
          </div>
        </div>

        <div class="field col-md-6 form-group">
          <div class="col-sm-2 alineado">
            <%= f.label :description, 'DescripciÃ³n:', :class => 'control-label' %>
          </div>
          <div class="col-sm-7">
            <%= f.text_field :description, :maxlength => 30, :class => 'form-control' %>
          </div>
        </div>
      </div>
      <div class="field col-md-12 form-group">
        <br>
        <div class="field col-md-3 form-group">
          <div class="col-sm-3 alineado">
            <%= f.label :quantity, 'Cantidad:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-sm-5 ">
            <% if action_name == "edit" %>
                <%= f.label :quantity, material.quantity, :class => 'control-label' %>
            <% else %>
                <%= f.text_field :quantity, :maxlength => 8, :class => 'form-control' %>
            <% end %>
          </div>
        </div>
        <div class="field col-md-3 form-group">
          <div class="col-sm-6 ">
            <%= f.label :measurement_unit, 'Ud. medida:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-sm-5">
            <%= f.text_field :measurement_unit, :maxlength => 5, :class => 'form-control' %>
          </div>
        </div>

        <div class="field col-md-3 form-group">
          <div class="col-sm-4 alineado">
            <%= f.label :price, 'Precio:', :class => 'control-label tooltip_required' %>
          </div>
          <div class="col-sm-6 ">
            <%= f.text_field :price, :maxlength => 10, :class => 'form-control' %>
          </div>
        </div>

        <div class="field col-md-3 form-group">
          <div class="col-sm-7 alineado">
            <%= f.label :minimun_stock, 'Stock min:', :class => 'control-label' %>
          </div>
          <div class="col-sm-5 ">
            <%= f.text_field :minimun_stock, :maxlength => 5, :class => 'form-control' %>
          </div>
        </div>
      </div>
    </div>

    <div class="box-footer clearfix">
      <div class="pull-right">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <%= link_to "<i class=\"fa fa-arrow-left\"></i>".html_safe, materials_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
<%end%>

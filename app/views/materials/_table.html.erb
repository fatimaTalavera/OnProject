<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-striped table-bordered table-hover data-table ">
      <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Unidad medida</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th colspan="3">Acciones</th>
      </tr>
      </thead>

      <tbody>
      <% materials.each do |material| %>
          <tr>
            <td><%= material.name %></td>
            <td><%= material.description %></td>
            <td><%= material.measurement_unit %></td>
            <td><%= material.quantity %></td>
            <td><%= material.price %></td>

            <td><%= link_to material, class: 'btn btn-info active', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class="fa fa-eye"></span>
              <% end %>
              <%= link_to edit_material_path(material), class: 'btn btn-success active', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class="fa fa-edit"></span>
              <% end %>
              </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

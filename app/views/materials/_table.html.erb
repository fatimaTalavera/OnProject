<div class="panel panel-default">
  <h1 class="panel-heading"> Lista de Materiales
  <%= link_to new_material_path, class: 'btn btn-success active', title: 'Crear nuevo Material', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
      <span class= "fa fa-plus"></span>
  <% end %></h1>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripcion</th>
          <th>Unidad medida</th>
          <th>Cantidad</th>
          <th>Precio</th>
          <th colspan="3">Acciones</th>
        </tr>
        </thead>

        <tbody>
        <% @materials.each do |material| %>
            <tr>
              <td><%= material.name %></td>
              <td><%= material.description %></td>
              <td><%= material.measurement_unit %></td>
              <td><%= material.quantity %></td>
              <td><%= material.price %></td>

              <td><%= link_to material, class: 'btn btn-info active', title: 'Ver', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-eye"></span>
                    <%end%>
                <%= link_to edit_material_path(material), class: 'btn btn-success active', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-edit"></span>
                <% end %>
                <%= link_to material, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este registro?' }, class: 'btn btn-danger active', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "fa fa-trash"></span>
                <% end %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

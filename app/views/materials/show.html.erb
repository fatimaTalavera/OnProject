<div class="box box-success">
  <div class="box-header with-header box-success">
    <h1 class="page-header">Material</h1>
  </div>
  <div class="box-body">
    <div class="field col-md-12 form-group">
      <div class="field col-md-4 form-group">
        <div class="col-sm-3 ">
          <strong>Nombre:</strong>
        </div>
        <div class="col-sm-7 ">
          <%= @material.name %>
        </div>
      </div>

      <div class="field col-md-4 form-group">
        <div class="col-sm-3 ">
          <strong>Descripcion:</strong>
        </div>
        <div class="col-sm-7">
          <%= @material.description %>
        </div>
      </div>

      <div class="field col-md-4 ">
        <div class="col-sm-3 ">
          <strong>Cantidad:</strong>
        </div>
        <div class="col-sm-6 ">
          <%= @material.quantity %>
        </div>
      </div>
    </div>
    <div class="field col-md-12">
      <br>
      <div class="field col-md-4">
        <div class="col-sm-5 ">
          <strong>Ud. de medida:</strong>
        </div>
        <div class="col-sm-5">
          <%= @material.measurement_unit %>
        </div>
      </div>

      <div class="field col-md-4">
        <div class="col-sm-4">
          <strong>Precio:</strong>
        </div>
        <div class="col-sm-6 ">
          <%= @material.price %>
        </div>
      </div>

      <div class="field col-md-4">
        <div class="col-sm-5 ">
          <strong>Stock minimo:</strong>
        </div>
        <div class="col-sm-2 ">
          <%= @material.minimun_stock %>
        </div>
      </div>
    </div>
  </div>

  <div class="box-footer">
    <div class="pull-right">
      <%= link_to 'Editar', edit_material_path(@material), :class => 'btn btn-primary active' %>
      <%= link_to 'Atras', materials_path, :class => 'btn btn-default' %>
    </div>
  </div>
</div>

<div class="box box-success">
  <div class="box-header with-border box-success">
    <h3 class="box-title"><%= t('helpers.title.certification.list') %></h3>
  </div>
  <div class="box-body">
    <div class="certification-search searchList">
      <%= search_form_for(@q, remote: true, :html => { class: 'remote-search' }) do |f| %>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group has-feedback">
                <%= f.text_field :contract_name_cont, class: 'form-control', autocomplete: 'off', placeholder: 'Busca por Contrato' %>
                <i class="fa fa-search form-control-feedback"></i>
              </div>
            </div>
            <div class="col-md-4">
              <div class="btn btn-default daterange btn-block" id="date-range">
                <%= f.hidden_field :date_gteq, class: 'fecha-desde' %>
                <%= f.hidden_field :date_gteq, class: 'fecha-hasta' %>
                <i class="fa fa-calendar"></i>&nbsp;<span>Fecha</span>&nbsp;<b class="caret"></b>
              </div>
            </div>
            <div class="col-md-4">
              <%= f.select :state_eq ,Certification.state_types, {include_blank: 'Todos los estados...'}, class: 'form-control'%>
            </div>
          </div>
      <% end %>
    </div>
    <div class="overlay-wrapper searchResult table-responsive" id="certifications-table">
      <%= render 'list', :certifications => @certifications %>
    </div>
  </div>
  <div class="box-footer clearfix">
    <div id="paginate-container">
      <ul class="pagination pagination-sm no-margin pull-right">
        <%= paginate @certifications %>
      </ul>
    </div>
  </div>
</div>
<div class="box box-success">
  <div class="box-header with-border box-success">
    <h3 class="box-title">Auditor√≠a</h3>
    </div>
  <div class="box-body">
    <div class="audit-search searchList">
      <%= search_form_for(@q, remote: true, :html => { class: 'remote-search' }) do |f| %>
          <div class="input-group">
            <%= f.text_field :action, class: 'form-control', autocomplete: 'off', placeholder: 'Busca por accion' %>
            <div class="input-group-btn">
              <button type="submit" name="button" class="btn btn-default">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
      <% end %>
    </div>
    <div class="overlay-wrapper searchResult table-responsive" id="audits-table">
      <%= render 'list', :audits => @audits %>
    </div>
  </div>
  <div class="box-footer clearfix">
    <div id="paginate-container">
      <ul class="pagination pagination-sm no-margin pull-right">
        <%= paginate @audits %>
      </ul>
    </div>
  </div>
</div>
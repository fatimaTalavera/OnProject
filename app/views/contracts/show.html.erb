<div class="box box-success">
  <div class="box-header with-header">
    <h3 class="page-header">Contrato</h3>
    <div class="box-body">
        <p>
          <strong>Obra:</strong>
          <%= @contract.name %>
        </p>

        <p>
          <strong>Cliente:</strong>
          <%= @contract.client_name %>
        </p>

        <p>
          <strong>Fecha de inicio:</strong>
          <%= @contract.start_date %>
        </p>

        <p>
          <strong>Fecha de cierre:</strong>
          <%= @contract.end_date %>
        </p>

        <p>
          <strong>Monto:</strong>
          <%= @contract.amount %>
        </p>

      </div>

      <div class="panel-footer">
        <%= link_to 'Editar', edit_contract_path(@contract), :class => 'btn btn-default' %> |
        <%= link_to 'Atras', contracts_path %>
      </div>
    </div>
  </div>

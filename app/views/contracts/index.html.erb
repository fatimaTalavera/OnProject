<div class="box box-success">
  <div class="box-header with-border box-success">
    <h3 class="box-title"><%= t('helpers.title.contract.list') %></h3>
  </div>
  <div class="box-body">
    <div class="contract-search searchList">
      <%= search_form_for(@q, remote: true, :html => { class: 'remote-search' }) do |f| %>
          <div class="row">
            <div class="col-md-4">
              <div class="input-group">
                <%= f.text_field :name_or_budget_client_name_or_budget_client_ruc_cont, class: 'form-control', autocomplete: 'off', placeholder: 'Busca por nombre de la obra o nombre/ruc del cliente' %>
                <div class="input-group-btn">
                  <button type="submit" name="button" class="btn btn-default">
                    <i class="fa fa-search"></i>
                  </button>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="btn btn-default daterange btn-block" id="date-range">
                <%= f.hidden_field :start_date_gteq, class: 'fecha-desde' %>
                <%= f.hidden_field :start_date_gteq, class: 'fecha-hasta' %>
                <i class="fa fa-calendar"></i>&nbsp;<span>Fecha</span>&nbsp;<b class="caret"></b>
              </div>
            </div>
      <% end %>
      </div>
    </div>
    <div class="overlay-wrapper searchResult table-responsive" id="contracts-table">
      <%= render 'list', :contracts => @contracts %>
    </div>
  </div>
  <div class="box-footer clearfix">
    <div id="paginate-container">
      <ul class="pagination pagination-sm no-margin pull-right">
        <%= paginate @contracts %>
      </ul>
    </div>
  </div>
</div>
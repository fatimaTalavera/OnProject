<%= form_for contract, validate: true, :html => { class: 'form-horizontal' } do |f| %>
    <div class="box-body">
      <div class="field col-md-12 form-group">
        <div class="col-sm-4">
          <label class="control-label">Obra: </label>
          <span><%= @contract.name %></span>
        </div>
        <div class="col-sm-4">
          <label class="control-label">Cliente: </label>
          <span><%= @contract.client_name %></span>
        </div>
        <div class="col-sm-4">
          <label class="control-label">Monto: </label>
          <span><%= number_to_currency_py(@contract.amount) %></span>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-6 form-group">
          <div class="col-md-4">
            <%= f.label :start_date, 'Inicio de ejecución:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="input-group col-sm-4" style="padding-left: 14px">
            <%= f.text_field :start_date, :id => 'datepickerFrom', :class => ' date form-control datepicker' %><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>

        <div class="field col-md-6 form-group">
          <div class="col-md-4">
            <%= f.label :end_date, 'Fin de Ejecución:', :class => 'control-label  tooltip_required' %>
          </div>
          <div class="input-group col-sm-4" style="padding-left: 14px">
            <%= f.text_field :end_date, :id => 'datepickerTo', :class => ' date form-control datepicker' %><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>

      <%= f.hidden_field :budget_id, :class => 'form-control' %>
    </div>

    <div class="box-footer clearfix">
      <div class="pull-right">
        <%= f.submit 'Guardar', :class => 'btn btn-primary'%>
        <%= link_to 'Cancelar',  contracts_path , class: 'btn btn-default' %>
      </div>
    </div>
<% end %>

<table class="table table-bordered table-condensed table-list">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Documento</th>
    <th>Correo</th>
    <th>Dirección</th>
    <th>Teléfono</th>
    <th class="table-actions"></th>
  </tr>
  </thead>

  <tbody>
  <% employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.identification_document %></td>
        <td><%= employee.email %></td>
        <td><%= employee.address %></td>
        <td><%= employee.phone %></td>
        <td>
          <%= link_to "<i class=\"fa fa-eye\"></i>".html_safe, employee_path(employee), {:class => "btn btn-xs bg-teal"} %>
          <% if (can? :update, Employee) %>
              <%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_employee_path(employee), {:class => "btn btn-xs bg-orange"} %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
